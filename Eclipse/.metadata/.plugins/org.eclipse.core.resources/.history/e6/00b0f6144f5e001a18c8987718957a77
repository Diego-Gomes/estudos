		 * 
		 * products.forEach(lambdaExpression);
		 * 
		 * System.out.println("");
		 * 
		 * productDAO.delete(2);
		 * 
		 * }
		 */
		
		testPoolConnection();
	}

	private static void testPoolConnection() throws SQLException {
		ConnectionFactory connectionFactory = new ConnectionFactory();
		
		for (int i = 0; i < 20; i++) {
			
			connectionFactory.getConnection();
			
			System.out.println(i);
		}
	}
	
	

}
